<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/infoLL"
    android:onClick="layoutClick"
    android:background="@color/colorMain"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp50"
        android:gravity="center"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/information_message"
        android:textStyle="bold"
        tools:text="Уведомление"
        android:textSize="@dimen/spvalue40"
     />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/press_to_screen"
            android:textStyle="bold"
            android:textSize="@dimen/spvalue40"
            />


    </LinearLayout>

</LinearLayout>