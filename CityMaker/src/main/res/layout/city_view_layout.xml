        <!--android:onClick="cityClick"-->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/city_view_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ll_information"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/current_city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/spvalue30"
                    android:paddingLeft="@dimen/dpvalue_min"
                    android:textStyle="bold"

                    tools:text="Name"
                    android:textColor="@color/colorPrimaryDark"
                    android:shadowColor="@color/text_shadow_white"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1"
                    />

                <TextView
                    android:id="@+id/current_city_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/spvalue20"
                    android:paddingLeft="@dimen/dpvalue_min"
                    android:textStyle="bold"
                    tools:text="Level"
                    android:textColor="@color/colorPrimaryDark"
                    android:shadowColor="@color/text_shadow_white"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1"/>

                <TextView
                    android:id="@+id/current_city_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dpvalue_min"
                    android:textSize="@dimen/spvalue20"
                    android:textStyle="bold"
                    tools:text="type"
                    android:textColor="@color/colorPrimaryDark"
                    android:shadowColor="@color/text_shadow_white"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1"/>

            </LinearLayout>



            <TextView
                android:id="@+id/current_count_of_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingTop="@dimen/space_size"
                android:paddingLeft="@dimen/dpvalue_min"
                android:textSize="@dimen/spvalue15"
                tools:text="Count of money"
                android:layout_below="@+id/ll_information"
                android:textColor="@color/colorPrimaryDark"
                android:shadowColor="@color/text_shadow_white"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1"
                />

            <TextView
                android:id="@+id/current_count_of_citiens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dpvalue_min"
                android:layout_below="@+id/current_count_of_money"
                android:textStyle="bold"
                android:textSize="@dimen/spvalue15"
                tools:text="Citiens"
                android:textColor="@color/colorPrimaryDark"
                android:shadowColor="@color/text_shadow_white"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1"/>

            <TextView
                android:id="@+id/current_count_of_tourists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:paddingLeft="@dimen/dpvalue_min"
                android:textSize="@dimen/spvalue15"
                tools:text="Tourists"
                android:layout_below="@+id/current_count_of_citiens"
                android:textColor="@color/colorPrimaryDark"
                android:shadowColor="@color/text_shadow_white"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1"
                />

            <TextView
                android:id="@+id/current_ecology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:paddingLeft="@dimen/dpvalue_min"
                android:textSize="@dimen/spvalue15"
                android:layout_below="@+id/current_count_of_tourists"
                tools:text="economy"
                android:textColor="@color/colorPrimaryDark"
                android:shadowColor="@color/text_shadow_white"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1"/>


            <TextView
                android:id="@+id/current_science"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:layout_below="@id/current_ecology"
                android:paddingLeft="@dimen/dpvalue_min"
                android:textSize="@dimen/spvalue15"
                tools:text="Science"
                android:textColor="@color/colorPrimaryDark"
                android:shadowColor="@color/text_shadow_white"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1"/>


            <TextView
                android:id="@+id/current_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_below="@+id/current_science"
                android:paddingLeft="@dimen/dpvalue_min"
                android:textSize="@dimen/spvalue15"
                android:paddingBottom="@dimen/dp10"
                tools:text="Mood"
                android:textColor="@color/colorPrimaryDark"
                android:shadowColor="@color/text_shadow_white"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1"/>




        </RelativeLayout>


    </FrameLayout>

</LinearLayout>