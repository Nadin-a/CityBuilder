            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">



                <Button
                    android:id="@+id/current_settings"
                    android:onClick="btnClick"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/size_settings"
                    android:layout_height="@dimen/size_settings"
                    android:background="@drawable/coleso_pic" />

                <Button
                    android:id="@+id/get_title"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/size_settings"
                    android:layout_height="@dimen/size_settings"
                    android:background="@drawable/samosval_pic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="info"
                    android:id="@+id/information"
                    android:textStyle="bold"
                    android:textSize="@dimen/spvalue15"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorButton"
                    />

                <TextView
                    android:id="@+id/current_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/spvalue15"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorButton"
                    android:textStyle="bold"
                    tools:text="Step" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/padding_size" />

                <Button
                    android:id="@+id/next_step"
                    android:layout_width="@dimen/size_settings"
                    android:layout_height="@dimen/size_settings"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/arrow_pic"
                    android:onClick="nextClick" />

