<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/myConstructionsListLayout"
    android:background="@color/colorMain"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quest_text"
        android:textSize="@dimen/spvalue20"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labConstr"
        android:layout_gravity="center"
        android:textSize="@dimen/spvalue30"
    />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fcffc5"
        android:id="@+id/myConstructonsListView"/>

</LinearLayout>